<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>  <!-- CORRECTO: Ejecuta Spring Boot -->
        </goals>
        <properties>
            <spring-boot.run.jvmArguments>-noverify</spring-boot.run.jvmArguments>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal> 
        </goals>
        <properties>
            <spring-boot.run.jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -noverify</spring-boot.run.jvmArguments>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
            <packaging>war</packaging>
        </packagings>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <spring-boot.run.jvmArguments>-noverify</spring-boot.run.jvmArguments>
        </properties>
    </action>
</actions>